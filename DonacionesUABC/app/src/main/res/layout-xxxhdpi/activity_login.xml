<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/fondoNegro"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/footerbg" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="93dp"
        android:layout_height="135dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="237dp"
        tools:srcCompat="@drawable/mizquierda" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="93dp"
        android:layout_height="135dp"
        android:layout_marginLeft="267dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="237dp"
        tools:srcCompat="@drawable/merecha" />

    <ImageView
        android:id="@+id/fondoVerde"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/verdechido" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fondoNegro"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="9dp"
        android:text="Universidad Autonoma de Baja California"
        android:textColor="#FFFF"
        android:textSize="11.5sp" />

    <ImageView
        android:id="@+id/fondoNaranja"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="73dp"
        android:src="@drawable/lineanaranja" />

    <TextView
        android:id="@+id/namePrograma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fondoNaranja"
        android:paddingTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:text="Donaciones UABC"
        android:textColor="#FFFF"
        android:textSize="11.5sp" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/fondoInferior"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:src="@drawable/header"/>


    <ImageView
        android:id="@+id/iconEmail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="250dp"
        tools:srcCompat="@drawable/iconemail" />

    <ImageView
        android:id="@+id/iconPass"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="230dp"
        tools:srcCompat="@drawable/iconpass" />

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/iconEmail"
        android:layout_marginLeft="75dp"
        android:background="#d8d8d8"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textStyle="normal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtUser"
        android:text="\@uabc.edu.mx"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="190dp"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/iconPass"
        android:layout_marginLeft="75dp"
        android:background="#d8d8d8"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textStyle="normal" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/iconPass"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-205dp"
        android:background="@drawable/borde_redondo"
        android:textColor="#FFFFFF"
        android:text="Acceder"
        android:onClick="onClickAcceder"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="82dp"
        android:textColor="#1077b7"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Registrarse"
        android:onClick="onClickRegistrar"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginLeft="186dp"
        android:textColor="#1077b7"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Acerca de"
        android:onClick="onClickAcercaDe"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="13dp"
        android:layout_height="19dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="71dp"
        tools:srcCompat="@drawable/linea" />

</RelativeLayout>