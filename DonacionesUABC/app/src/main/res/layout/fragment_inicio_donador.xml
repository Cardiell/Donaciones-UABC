<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFF"
    tools:context=".AcercadeActivity">


    <ImageView
        android:id="@+id/fondoNegro"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/footerbg" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="93dp"
        android:layout_height="135dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="237dp"
        tools:srcCompat="@drawable/mizquierda" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="93dp"
        android:layout_height="135dp"
        android:layout_marginLeft="267dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="237dp"
        tools:srcCompat="@drawable/merecha" />

    <ImageView
        android:id="@+id/fondoVerde"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/verdechido" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fondoNegro"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="9dp"
        android:text="Universidad Autonoma de Baja California"
        android:textColor="#FFFF"
        android:textSize="11.5sp" />

    <ImageView
        android:id="@+id/fondoNaranja"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="73dp"
        android:src="@drawable/lineanaranja" />

    <TextView
        android:id="@+id/namePrograma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fondoNaranja"
        android:paddingTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:text="Donaciones UABC"
        android:textColor="#FFFF"
        android:textSize="11.5sp" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/fondoInferior"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:src="@drawable/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="140dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tipo de Donacion"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
<GridLayout
    android:columnCount="2"
    android:rowCount="4"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="40dp">
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/image_border"
            android:src="@drawable/ropa"
            android:layout_row="0"
            android:layout_column="0" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Ropa"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/image_border"
        android:src="@drawable/utiles"
        android:layout_row="0"
        android:layout_marginLeft="40dp"
        android:layout_column="1" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Utiles"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginLeft="80dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/image_border"
        android:src="@drawable/electronica"
        android:layout_row="2"
        android:layout_marginTop="20dp"
        android:layout_column="0"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Electronica"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/image_border"
        android:src="@drawable/otros"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="otros"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginLeft="80dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

</GridLayout>
    </LinearLayout>

</RelativeLayout>