<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".activities.LoginActivity">


    <ImageView
        android:id="@+id/fondoNegro"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/footerbg" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="93dp"
        android:layout_height="135dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="237dp"
        android:src="@drawable/mizquierda" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="93dp"
        android:layout_height="135dp"
        android:layout_marginLeft="267dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="237dp"
        android:src="@drawable/merecha" />

    <ImageView
        android:id="@+id/fondoVerde"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/verdechido" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fondoNegro"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="9dp"
        android:text="Universidad Autonoma de Baja California"
        android:textColor="#FFFF"
        android:textSize="11.5sp" />

    <ImageView
        android:id="@+id/fondoNaranja"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="73dp"
        android:src="@drawable/lineanaranja" />

    <TextView
        android:id="@+id/namePrograma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fondoNaranja"
        android:paddingTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:text="Donaciones UABC"
        android:textColor="#FFFF"
        android:textSize="11.5sp" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/fondoInferior"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:src="@drawable/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="180dp"
        android:paddingLeft="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:text="Iniciar sesiÃ³n"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/iconemail" />

            <EditText
                android:id="@+id/txtUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/iconEmail"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="45dp"
                android:background="#d8d8d8"
                android:hint="Usuario"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/iconpass" />


            <EditText
                android:id="@+id/txtPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/iconPass"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="45dp"
                android:background="#d8d8d8"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textStyle="normal" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_redondo"
            android:textColor="#FFFFFF"
            android:text="Acceder"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickAcceder"/>
    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="92dp"
        android:textColor="#1077b7"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Registrarse"
        android:onClick="onClickRegistrar"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginLeft="200dp"
        android:textColor="#1077b7"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Acerca de"
        android:onClick="onClickAcercaDe"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="13dp"
        android:layout_height="19dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="71dp"
        android:src="@drawable/linea" />

</RelativeLayout>