<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@drawable/image_border"
    android:paddingTop="10dp"
    android:layout_marginTop="0.01dp"
    android:filterTouchesWhenObscured="true"
    android:gravity="end"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Calculadora Casio"
            android:textSize="22dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:contentDescription="Descripcion" />

        <TextView
            android:id="@+id/nombreFacultad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Facultad:"
            android:textSize="14dp"
            android:textColor="#000"
            android:contentDescription="Descripcion" />

        <TextView
            android:id="@+id/numeroArticulos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Articulos No:"
            android:textSize="14dp"
            android:textColor="#000"
            android:contentDescription="Descripcion" />

        <TextView
            android:id="@+id/nombreLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Lugar:"
            android:textSize="14dp"
            android:textColor="#000"
            android:contentDescription="Descripcion" />

        <TextView
            android:id="@+id/nombreDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Dia:"
            android:textSize="14dp"
            android:textColor="#000"
            android:contentDescription="Descripcion" />

        <TextView
            android:id="@+id/nombreDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Descripcion:"
            android:textSize="14dp"
            android:textColor="#000"
            android:contentDescription="Descripcion" />
        <Button
            android:id="@+id/btnDeseo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Deseo"
            android:layout_marginBottom="20dp"
            android:background="#83AA83"/>


    </LinearLayout>
</LinearLayout>

