<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="4dp" android:top="9dp">
                <shape>
                    <corners android:radius="6dp" />
                    <gradient android:angle="180"
                        android:endColor="#111111" android:startColor="#767c79"/>
                    <solid android:color="#111111" />

                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="180"
                        android:endColor="#026d34" android:startColor="#009245" />
                    <stroke android:width="1dp" android:color="#026d34" />
                    <corners android:radius="6dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
